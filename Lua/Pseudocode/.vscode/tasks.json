{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Lua",
            "type": "shell",
            "command": "lua main.lua",
            "options": {
                "cwd": "${fileDirname}",
            },
            "group": {
                "kind": "build",
                "isDefault": "**/*.lua"
            },
            "presentation": {
                "echo": false,
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
    ]
}